<Window x:Class="ElectricVehicleManagement.Presentation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ElectricVehicleManagement.Data.Models;assembly=ElectricVehicleManagement.Data"
    Title="Vehicle MarketPlace"
    WindowStartupLocation="CenterScreen"
    Height="900"
    Width="1200"
    FontFamily="Tahoma"
    FontSize="18"
    Background="#FFA7F3D0"
    Loaded="Window_Loaded">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
            ShadowDepth="2"
            BlurRadius="8"
            Opacity="0.3"
            Direction="270" />
    </Window.Resources>

    <DockPanel>
        <!-- Top Header Panel -->
        <Border DockPanel.Dock="Top"
            Background="#FF2C3E50"
            Padding="10"
            CornerRadius="0,0,10,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- LEFT: App title / logo -->
                <StackPanel Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <TextBlock Text="Vehicle MarketPlace"
                        Foreground="White"
                        FontSize="22"
                        FontWeight="Bold"
                        Margin="0,0,20,0" />
                </StackPanel>

                <!-- RIGHT: Post listing + auth controls -->
                <StackPanel Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right">

                    <!-- Post listing button -->
                    <Button x:Name="postListingButton"
                        Content="Post listing"
                        Width="120"
                        Height="30"
                        Background="#FF27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Cursor="Hand"
                        Click="postListingButton_Click" />

                    <!-- Separator -->
                    <Border Width="1"
                        Height="26"
                        Margin="8,0,8,0"
                        Background="#FFBDC3C7" />

                    <!-- Auth controls -->
                    <ComboBox x:Name="connectionNameComboBox"
                        Width="180"
                        Height="30"
                        VerticalAlignment="Center"
                        IsEditable="True"
                        Padding="5"
                        FontSize="14"
                        Background="White"
                        BorderBrush="#FFBDC3C7"
                        BorderThickness="1" />

                    <Button x:Name="loginButton"
                        Content="Login"
                        Width="80"
                        Height="30"
                        Margin="4,0,0,0"
                        Background="#FF27AE60"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_OnClick" />

                    <Image x:Name="avatarImage"
                        Width="40"
                        Height="40"
                        Margin="8,0,0,0"
                        Visibility="Collapsed"
                        ClipToBounds="True"
                        Stretch="UniformToFill" />

                    <TextBlock x:Name="emailTextBlock"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="White"
                        Margin="8,0,0,0"
                        Visibility="Collapsed" />

                    <Button x:Name="logoutButton"
                        Content="Logout"
                        Width="80"
                        Height="30"
                        Margin="8,0,0,0"
                        Background="#FFC0392B"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Cursor="Hand"
                        Click="logoutButton_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Box -->
        <StackPanel DockPanel.Dock="Top"
            Orientation="Horizontal"
            Margin="20,10,20,10"
            HorizontalAlignment="Center">
            <TextBox Width="400"
                Height="35"
                FontSize="14"
                Padding="5"
                Background="White"
                BorderBrush="#FFBDC3C7"
                BorderThickness="1"
                Text="Search listings..."
                x:Name="SearchBox"/>
            <Button Content="Search"
                Width="100"
                Height="35"
                Margin="10,0,0,0"
                Background="#FF2980B9"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand" 
                Click="ButtonBase_OnClick"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                    Margin="20,0,20,10"
                    HorizontalAlignment="Center">

            <!-- Transmission -->
            <TextBlock Text="Transmission:"
                       Width="150"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="TransmissionComboBox"
                      Width="160"
                      Height="32" SelectionChanged="TransmissionComboBox_OnSelectionChanged"/>

            <!-- Body Type -->
            <TextBlock Text="Body type:"
                       Width="120"
                       Margin="30,0,0,0"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="BodyTypeComboBox"
                      Width="160"
                      Height="32" SelectionChanged="BodyTypeComboBox_OnSelectionChanged" />

            <!-- Energy -->
            <TextBlock Text="Energy:"
                       Width="100"
                       Margin="30,0,0,0"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="EnergyComboBox"
                      Width="160"
                      Height="32" SelectionChanged="EnergyComboBox_OnSelectionChanged" />
        </StackPanel>
        
        <!-- Listings Grid -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
            Margin="10,0,10,10">
            <ItemsControl x:Name="ListingsItemsControl"
                HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel HorizontalAlignment="Center"
                            ItemWidth="280"
                            ItemHeight="Auto"
                            Margin="0" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:Listing}">
                        <Border CornerRadius="10"
                            Margin="10"
                            Padding="10"
                            BorderBrush="#FFBDC3C7"
                            BorderThickness="1"
                            Background="#FFD0F8E0"
                            Effect="{DynamicResource DropShadowEffect}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            MouseLeftButtonUp="UIElement_OnMouseLeftButtonUp"
                            Cursor="Hand">
                            <StackPanel>
                                <Image Height="300"
                                    Stretch="UniformToFill"
                                    Margin="0 0 0 8"
                                    Source="{Binding Images[0].ImageUrl}" />

                                <TextBlock Text="{Binding Title}"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="#FF2C3E50"
                                    TextWrapping="Wrap"
                                    Margin="0 0 0 4" />

                                <TextBlock Text="{Binding VehicleBrand}"
                                    FontWeight="SemiBold"
                                    Foreground="#FF34495E"
                                    TextWrapping="Wrap" />

                                <TextBlock Text="{Binding VehicleModel}"
                                    Foreground="#FF34495E"
                                    TextWrapping="Wrap" />

                                <TextBlock Text="{Binding Price, StringFormat=C}"
                                    Foreground="#FF27AE60"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="0 6 0 0" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </ScrollViewer>
    </DockPanel>
</Window>