<Window x:Class="ElectricVehicleManagement.Presentation.MainAdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard"
        WindowStartupLocation="CenterScreen"
        Height="750"
        Width="1300"
        FontFamily="Tahoma"
        FontSize="18"
        Background="#FFA7F3D0"
        Loaded="MainAdminWindow_OnLoaded">

    <Window.Resources>

        <DropShadowEffect x:Key="SoftShadow"
                          ShadowDepth="2"
                          BlurRadius="10"
                          Opacity="0.25" />

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2C3E50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Height" Value="42" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8 4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="#3498DB" />
            <Setter Property="Margin" Value="4 0" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Effect" Value="{StaticResource SoftShadow}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <DockPanel>

        <Border DockPanel.Dock="Top"
                Background="#2C3E50"
                Height="70"
                Padding="20"
                Effect="{StaticResource SoftShadow}">
            <Grid>
                <TextBlock Text="Vehicle Marketplace â€“ Admin Dashboard"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="26"
                           FontWeight="Bold" />
            </Grid>
        </Border>


        <Grid Margin="20">

            <Border Background="White"
                    CornerRadius="12"
                    Padding="20"
                    Effect="{StaticResource SoftShadow}">

                <TabControl x:Name="MainTabControl"
                            FontSize="18"
                            Padding="10">

                    <TabItem Header="Pending Listings">
                        <Grid Margin="10">

                            <DataGrid x:Name="PendingListingGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      RowHeight="55"
                                      ColumnHeaderHeight="40"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      BorderBrush="#D5D8DC"
                                      BorderThickness="1"
                                      Effect="{StaticResource SoftShadow}">

                                <DataGrid.Columns>

                                    <DataGridTextColumn Header="Title"
                                                        Binding="{Binding Title}"
                                                        Width="2*" />

                                    <DataGridTextColumn Header="Brand"
                                                        Binding="{Binding VehicleBrand}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Model"
                                                        Binding="{Binding VehicleModel}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Price"
                                                        Binding="{Binding Price}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Created At"
                                                        Binding="{Binding CreatedAt}"
                                                        Width="*" />

                                    <DataGridTemplateColumn Header="Action"
                                                            Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Details"
                                                        Background="#3498DB"
                                                        Click="ButtonBase_OnClick" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>

                        </Grid>
                    </TabItem>


                    <TabItem Header="Approval History">
                        <DockPanel Margin="10">

                            <!-- FILTER BAR -->
                            <StackPanel DockPanel.Dock="Top"
                                        Orientation="Horizontal"
                                        Margin="0 0 0 10">
                                <TextBlock Text="Filter:"
                                           VerticalAlignment="Center"
                                           Margin="0 0 10 0"
                                           FontWeight="Bold" />

                                <ComboBox x:Name="HistoryFilterCombo"
                                          Width="180"
                                          SelectionChanged="HistoryFilterCombo_OnSelectionChanged">
                                    <ComboBoxItem Content="All" IsSelected="True" />
                                    <ComboBoxItem Content="Approved" />
                                    <ComboBoxItem Content="Rejected" />
                                    <ComboBoxItem Content="Sold" />
                                </ComboBox>
                            </StackPanel>

                            <!-- DATA GRID -->
                            <DataGrid x:Name="HistoryListingGrid"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      RowHeight="55"
                                      ColumnHeaderHeight="40"
                                      GridLinesVisibility="None"
                                      Background="White"
                                      BorderBrush="#D5D8DC"
                                      BorderThickness="1"
                                      Effect="{StaticResource SoftShadow}">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Title"
                                                        Binding="{Binding Title}"
                                                        Width="2*" />

                                    <DataGridTextColumn Header="Brand"
                                                        Binding="{Binding VehicleBrand}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Model"
                                                        Binding="{Binding VehicleModel}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Price"
                                                        Binding="{Binding Price}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Status"
                                                        Binding="{Binding Status}"
                                                        Width="*" />

                                    <DataGridTextColumn Header="Reviewed At"
                                                        Binding="{Binding UpdatedAt}"
                                                        Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>

                        </DockPanel>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>

    </DockPanel>

</Window>