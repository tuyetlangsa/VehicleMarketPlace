<Window x:Class="ElectricVehicleManagement.Presentation.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="System Statistics"
        WindowStartupLocation="CenterScreen"
        Width="1100" Height="750"
        FontFamily="Tahoma"
        FontSize="18"
        Background="#FFA7F3D0"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="System Overview Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0 0 0 20"/>

        <!-- USER CARDS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Total Users -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                <StackPanel>
                    <TextBlock Text="Total Users" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="TotalUsersText" Text="0" FontSize="30" Foreground="#3498DB"/>
                </StackPanel>
            </Border>

            <!-- Active -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                <StackPanel>
                    <TextBlock Text="Active Users" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="ActiveUsersText" Text="0" FontSize="30" Foreground="#27AE60"/>
                </StackPanel>
            </Border>

            <!-- Banned -->
            <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                <StackPanel>
                    <TextBlock Text="Banned Users" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="BannedUsersText" Text="0" FontSize="30" Foreground="#C0392B"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- LISTING CARDS + CHART -->
        <StackPanel Grid.Row="2">

            <!-- FILTER BAR -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                <TextBlock Text="From:"/>
                <DatePicker x:Name="FromDatePicker" Width="150" Margin="10 0"/>
                <TextBlock Text="To:" Margin="10 0"/>
                <DatePicker x:Name="ToDatePicker" Width="150" Margin="10 0"/>
                <Button Content="Filter" Width="110" Background="#3498DB" Foreground="White"
                        Click="FilterListingBtn_Click"/>
            </StackPanel>

            <!-- LISTING CARDS -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                    <StackPanel>
                        <TextBlock Text="Total Listings" FontWeight="Bold" FontSize="18"/>
                        <TextBlock x:Name="TotalListingsText" Text="0" FontSize="30" Foreground="#9B59B6"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                    <StackPanel>
                        <TextBlock Text="Pending" FontWeight="Bold" FontSize="18"/>
                        <TextBlock x:Name="PendingListingsText" Text="0" FontSize="30" Foreground="#E67E22"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="20" Margin="10" Width="240">
                    <StackPanel>
                        <TextBlock Text="Approved" FontWeight="Bold" FontSize="18"/>
                        <TextBlock x:Name="ApprovedListingsText" Text="0" FontSize="30" Foreground="#27AE60"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- CHART -->
            <lvc:CartesianChart x:Name="ListingsChart"
                                Background="#FFFFFF"
                                Height="280"
                                Margin="0 20" />
        </StackPanel>

    </Grid>
</Window>
