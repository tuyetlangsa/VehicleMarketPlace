<Window x:Class="ElectricVehicleManagement.Presentation.PostListingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vehicle MarketPlace Listing"
        WindowStartupLocation="CenterScreen"
        Height="600"
        Width="1000"
        FontFamily="Tahoma"
        FontSize="16"
        Background="#FFA7F3D0">

    <Window.Resources>
        
        <Style x:Key="FormLabel"
               TargetType="TextBlock">
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Margin"
                    Value="0,0,8,0" />
        </Style>

       
        <Style TargetType="TextBox">
            <Setter Property="Height"
                    Value="32" />
            <Setter Property="Padding"
                    Value="6,3" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
        </Style>

       
        <Style x:Key="MultilineTextBox"
               TargetType="TextBox"
               BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Height"
                    Value="120" />
            <Setter Property="AcceptsReturn"
                    Value="True" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="VerticalScrollBarVisibility"
                    Value="Auto" />
            <Setter Property="VerticalContentAlignment"
                    Value="Top" />
            <Setter Property="Padding"
                    Value="6" />
        </Style>

        
        <Style x:Key="SectionTitle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="18" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#FF2C3E50" />
            <Setter Property="Margin"
                    Value="0,10,0,8" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Background="#FF2C3E50"
                Padding="10"
                CornerRadius="10">
            <DockPanel>
                <TextBlock Text="Vehicle MarketPlace Listing"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left" />
            </DockPanel>
        </Border>

        <!-- FORM -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,15,0,15"
                      VerticalScrollBarVisibility="Auto">
            <Border Background="#FFFFFFFF"
                    CornerRadius="10"
                    Padding="24"
                    BorderBrush="#FFBDC3C7"
                    BorderThickness="1">

                <!-- Main StackPanel -->
                <StackPanel Orientation="Vertical"
                            Margin="0"
                            KeyboardNavigation.TabNavigation="Cycle">

                    <!-- Section: Basic info -->
                    <TextBlock Text="Basic information"
                               Style="{StaticResource SectionTitle}" />

                    <!-- Title -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Title:"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="500"
                                 x:Name="TitleTextBox" />
                    </StackPanel>

                    <!-- Description -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,16">
                        <TextBlock Text="Description:"
                                   Width="180"
                                   VerticalAlignment="Top"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox x:Name="DescriptionTextBox"
                                 Width="700"
                                 Style="{StaticResource MultilineTextBox}" />
                    </StackPanel>

                    <Separator Margin="0,0,0,12" />

                    <!-- Section: Pricing & year -->
                    <TextBlock Text="Pricing and year"
                               Style="{StaticResource SectionTitle}" />

                    <!-- Price + Year -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Price (VND):"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="200"
                                 x:Name="PriceTextBox" />

                        <TextBlock Text="Manufacturing year:"
                                   Width="170"
                                   Margin="30,0,0,0"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="120"
                                 x:Name="YearTextBox" />
                    </StackPanel>

                    <Separator Margin="0,8,0,12" />

                    <!-- Section: Vehicle details -->
                    <TextBlock Text="Vehicle details"
                               Style="{StaticResource SectionTitle}" />

                    <!-- Brand + Model -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Brand:"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="220"
                                 x:Name="BrandTextBox" />

                        <TextBlock Text="Model:"
                                   Width="150"
                                   Margin="30,0,0,0"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="220"
                                 x:Name="ModelTextBox" />
                    </StackPanel>

                    <!-- Body type + Energy (using ComboBox) -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Body type:"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <ComboBox x:Name="BodyTypeComboBox"
                                  Width="220"
                                  Height="32"
                                  VerticalContentAlignment="Center" />

                        <TextBlock Text="Energy:"
                                   Width="150"
                                   Margin="30,0,0,0"
                                   Style="{StaticResource FormLabel}" />
                        <ComboBox x:Name="EnergyComboBox"
                                  Width="220"
                                  Height="32"
                                  VerticalContentAlignment="Center" />
                    </StackPanel>

                    <!-- Transmission + Seats (Transmission as ComboBox) -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,16">
                        <TextBlock Text="Transmission:"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <ComboBox x:Name="TransmissionComboBox"
                                  Width="220"
                                  Height="32"
                                  VerticalContentAlignment="Center" />

                        <TextBlock Text="Seats:"
                                   Width="150"
                                   Margin="30,0,0,0"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="80"
                                 x:Name="SeatingTextBox" />
                    </StackPanel>

                    <Separator Margin="0,0,0,12" />

                    <!-- Section: Battery & usage -->
                    <TextBlock Text="Battery and usage"
                               Style="{StaticResource SectionTitle}" />

                    <!-- Mileage + Battery capacity -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Mileage (km):"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="180"
                                 x:Name="MileageTextBox" />

                        <TextBlock Text="Battery capacity (kWh):"
                                   Width="200"
                                   Margin="30,0,0,0"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="120"
                                 x:Name="BatteryCapTextBox" />
                    </StackPanel>

                    <!-- Battery condition -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,16">
                        <TextBlock Text="Battery health (%):"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="120"
                                 x:Name="BatteryCondTextBox" />
                    </StackPanel>

                    <Separator Margin="0,0,0,12" />

                    <!-- Section: Location & images -->
                    <TextBlock Text="Location and images"
                               Style="{StaticResource SectionTitle}" />

                    <!-- Location -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Location:"
                                   Width="180"
                                   Style="{StaticResource FormLabel}" />
                        <TextBox Width="400"
                                 x:Name="LocationTextBox" />
                    </StackPanel>

                    <!-- Images -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,6,0,0">
                        <TextBlock Text="Images:"
                                   Width="180"
                                   VerticalAlignment="Top"
                                   Style="{StaticResource FormLabel}" />
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Choose images..."
                                        Width="160"
                                        Height="34"
                                        Background="#FF2980B9"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="SelectImageButton_Click" />
                                <TextBlock x:Name="SelectedImageTextBlock"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="#FF34495E"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>

                            <!-- image count -->
                            <TextBlock x:Name="SelectedImageCountTextBlock"
                                       Margin="0,5,0,0"
                                       Foreground="#FF7F8C8D"
                                       FontSize="13"
                                       Text="No images selected (select 3–10 images)" />
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- BUTTONS -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0">
            <Button Content="Cancel"
                    Width="120"
                    Height="38"
                    Margin="0,0,10,0"
                    Background="#FFC0392B"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click" />

            <Button Content="Post listing"
                    Width="160"
                    Height="38"
                    Background="#FF27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="PostButton_Click" />
        </StackPanel>
    </Grid>
</Window>