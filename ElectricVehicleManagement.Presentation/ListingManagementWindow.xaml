<Window x:Class="ElectricVehicleManagement.Presentation.ListingManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Listings"
        WindowStartupLocation="CenterScreen"
        Height="700"
        Width="1150"
        Background="#FFA7F3D0"
        FontFamily="Tahoma"
        FontSize="16">

    <Window.Resources>
       
        <Style x:Key="RightAlign" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
    </Window.Resources>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   
            <RowDefinition Height="Auto" />   
            <RowDefinition Height="*" />      
        </Grid.RowDefinitions>


        <Border Grid.Row="0"
                Background="#FF2C3E50"
                Padding="10"
                CornerRadius="10">
            <DockPanel>
                <TextBlock Text="My Listings"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           DockPanel.Dock="Left" />
            </DockPanel>
        </Border>


        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Left">

            <Grid>
                <TextBox x:Name="SearchTextBox"
                         Width="350"
                         Height="36"
                         Padding="8"
                         VerticalContentAlignment="Center"
                         Background="White"
                         TextChanged="SearchTextBox_TextChanged" />

                <TextBlock x:Name="Placeholder"
                           Text="Search by title, brand, model, location..."
                           Foreground="Gray"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           Visibility="Visible" />
            </Grid>

            <Button Content="Search"
                    Width="120"
                    Height="36"
                    Margin="10,0,0,0"
                    Background="#FF27AE60"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="SearchButton_Click" />

            <Button Content="Reset"
                    Width="100"
                    Height="36"
                    Margin="10,0,0,0"
                    Background="#FF7F8C8D"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="ResetButton_Click" />
        </StackPanel>


        <Border Grid.Row="2"
                Background="White"
                CornerRadius="10"
                Padding="15"
                Margin="0,15,0,0"
                BorderBrush="#FFBDC3C7"
                BorderThickness="1">

            <StackPanel>
                
                <DataGrid x:Name="ListingDataGrid"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          RowHeight="80"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#EEE"
                          BorderThickness="0">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ID"
                                            Width="140"
                                            Binding="{Binding ListingId}" />

                        <DataGridTemplateColumn Header="Image" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding PrimaryImageUrl}"
                                           Width="100"
                                           Height="60"
                                           Stretch="UniformToFill"
                                           Margin="5" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Title"
                                            Width="*"
                                            Binding="{Binding Title}" />

                        <DataGridTextColumn Header="Price"
                                            Width="120"
                                            Binding="{Binding Price}"
                                            ElementStyle="{StaticResource RightAlign}" />

                        <DataGridTextColumn Header="Status"
                                            Width="120"
                                            Binding="{Binding Status}" />

                        <DataGridTemplateColumn Header="Visible" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        IsChecked="{Binding IsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        HorizontalAlignment="Center"
                                        Checked="VisibilityCheckbox_Changed"
                                        Unchecked="VisibilityCheckbox_Changed"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                        <DataGridTemplateColumn Header="Actions" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit"
                                                Width="65"
                                                Height="32"
                                                Margin="0,0,10,0"
                                                Background="#FF2980B9"
                                                Foreground="White"
                                                Tag="{Binding ListingId}"
                                                Click="EditButton_Click" />

                                        <Button Content="Delete"
                                                Width="75"
                                                Height="32"
                                                Background="#FFC0392B"
                                                Foreground="White"
                                                Tag="{Binding ListingId}"
                                                Click="DeleteButton_Click" />
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>

                </DataGrid>

                <!-- PAGINATION OUTSIDE DATAGRID -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="10">
                    <Button x:Name="PrevButton" Content="⟨ Prev" Width="80" Click="Prev_Click" />
                    <TextBlock x:Name="PageLabel" FontSize="16" FontWeight="Bold" Margin="10,0" />
                    <Button x:Name="NextButton" Content="Next ⟩" Width="80" Click="Next_Click" />
                </StackPanel>

            </StackPanel>

        </Border>


    </Grid>
</Window>