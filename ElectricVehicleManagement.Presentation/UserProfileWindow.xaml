<Window x:Class="ElectricVehicleManagement.Presentation.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile"
        Width="550" Height="600"
        WindowStartupLocation="CenterScreen"
        FontFamily="Tahoma"
        FontSize="14"
        Background="#FFA7F3D0"
        >

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Text="User Profile"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0 0 0 20"/>


        <StackPanel Grid.Row="1">
            
            <TextBlock Text="Full Name" FontWeight="Bold"/>
            <TextBox x:Name="FullNameTextBox"
                     Margin="0 5 0 15"/>
            
            <TextBlock Text="Email" FontWeight="Bold"/>
            <TextBox x:Name="EmailTextBox"
                     IsReadOnly="True"
                     Background="#EAECEE"
                     Margin="0 5 0 15"/>

            <!-- PHONE -->
            <TextBlock Text="Phone" FontWeight="Bold"/>
            <TextBox x:Name="PhoneTextBox"
                     Margin="0 5 0 15"/>
            
            <TextBlock Text="Address" FontWeight="Bold"/>
            <TextBox x:Name="AddressTextBox"
                     Height="60"
                     TextWrapping="Wrap"
                     Margin="0 5 0 10"/>
            
            <GroupBox Header="Select Address (optional)" FontWeight="Bold" Margin="0 10 0 0">
                <Border BorderBrush="#D5D8DC" BorderThickness="1" Padding="5">
                    <ScrollViewer Height="150">
                        <TreeView x:Name="AddressTree"
                                  SelectedItemChanged="AddressTree_SelectedItemChanged"/>
                    </ScrollViewer>
                </Border>
            </GroupBox>

        </StackPanel>
        
        <Button Grid.Row="2"
                x:Name="saveBtn"
                Content="Save Changes"
                Background="#27AE60"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                Margin="0 20 0 0"
                Click="SaveBtn_Click"/>
    </Grid>
</Window>
